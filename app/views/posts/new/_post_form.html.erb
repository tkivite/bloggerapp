<%= bootstrap_form_for(@post) do |f| %>
    <%= f.text_field :title,
                     maxlength: 100,
                     placeholder: "Title",
                     class: "form-control",
                     required: true,
                     minlength: 5,
                     maxlength: 100 %>
    <%= f.text_area :content,
                    rows: 6,
                    required: true,
                    minlength: 20,
                    maxlength: 1000,
                    placeholder: "Write your comments here then click Create Post",
                    class: "form-control" %>

                    <%= f.file_field :upload_image, class: "form-control" %>  

    <%= f.submit "Create a post", class: "btn btn-primary btn-block" %>
  <% end %>